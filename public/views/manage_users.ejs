<% include functions.ejs %>
<!doctype html>
<html lang="en">
<head>
    <title>OWeek Info</title>
    <link rel="stylesheet" href="../css/misc.css">
</head>
<body>
<div class="container">
    <div style="position: relative;">
        <% outputNavigationButtons(true) %>
    </div>
</div>
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Delete Users</h1>
    <p>Do not delete yourself!</p>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/userdelete" method="post" id="user_form">
        <% for (var i = 0; i < users.length; ++i){ %>
            <label>
                <input type="checkbox" name="users" value="<%= users[i].email %>">
            </label><%= users[i].email %><br>
        <% } %>
        <input type="submit" value="Submit">
    </form>
</div>
</body>
</html>